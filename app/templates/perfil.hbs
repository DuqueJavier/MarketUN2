<div class="d-flex flex-row">
    <!--Perfil -->
    <div class="d-flex col-md-3 navbar-perfil"><br>
        <div>
            <h3><strong>Mis datos</strong></h3><br>
            <p>
                <h4>
                    <strong class="titulo-perfil">Correo:</strong><br>
                    <span>{{perfil.correo}}jaaduquelu@gmail.com</span>
                </h4>                
            </p><br>
            <p>
                <h4>
                    <strong class="titulo-perfil">Nombre:</strong><br>
                    <span>{{perfil.nombres}}Javier </span>
                    <span>{{perfil.apellidos}}Duque </span>
                </h4>                
            </p><br>
            <p>
                <h4 >
                    <strong class="titulo-perfil">Celular:</strong><br>
                    <span>{{perfil.celular}}32143365786</span>
                </h4>                
