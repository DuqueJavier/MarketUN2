    </div>

    <!-- publicaciones propias -->    
    <div class="col-md-9 d-flex flex-row justify-content-between">        
        <div class="row card-deck px-4 py-4">
            {{#each model.publicaciones as |publicacion|}}
            <div class="card col-md-4">
                <img class="card-img-top" src="{{publicacion.foto}}" alt="{{publicacion.title}}">
                <div class="card-body">
                    <h5 class="card-title rounded">{{publicacion.title}}Card title</h5>
                    <p class="card-text">{{publicacion.descripcion}}This is a wider card with supporting text below as a natural lead-in to additional
                        content. This content is a little bit longer.</p>
                </div>
                <div class="card-footer d-flex flex-row justify-content-between ">
                    <small class="text-muted">Precio: $ {{publicacion.precio}}</small>
                    <button class="btn btn-success">Contactar</button>
                </div>
            </div>
            {{/each}}
    
        </div>
    </div>   

</div>

