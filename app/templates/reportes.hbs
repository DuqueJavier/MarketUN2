<nav class="navbar navbar-dark bg-primary">
    {{#link-to 'index' class="navbar-brand"}}
    <h3>MarketUN</h3>
    {{/link-to}}
    <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
            <a class="nav-link" href="#">Listado de reportes activos</a>
        </li>
    </ul>

    <form class="form-inline my-2 my-lg-0">
        <h3>
            <strong class="mx-4">Administrador</strong>
        </h3>
        <button class="btn btn-danger my-2 my-sm-0" {{action 'cerrar'}}>Cerrar sesión</button>
    </form>
</nav>

<ul>
    {{#each model.publicaciones as |publicacion|}}    
    <li class="item">
        <div class="d-flex justify-content-between">
            <div class="col-md-4">
                <h2><strong> Publicacion reportada: </strong></h2>                
            </div>
            <div class="col-md-6">
                <h3>{{publicacion.titulo}}</h3>
            </div>
        </div>
        <hr>
        <div class="d-flex justify-content-around">
            <div class="col-md-7">                
                <p>
                    <strong>Motivo del reporte: </strong>{{publicacion.descripcionReporte}}</p>
            </div>
            <div class="form-check">
                <button class="btn btn-danger" {{action "eliminarReporte" publicacion}}>ELIMINAR REPORTE</button>
            </div>
            <div class="form-check">
                <button class="btn btn-danger" {{action "eliminar" publicacion}}>ELIMINAR PUBLICACIÓN</button>
            </div>
        </div>
    </li>
    {{/each}}
</ul>
<br><br>